<!--ユーザー情報部分テンプレート-->
<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
    <tr>
      <th>名前</th>
      <th><%= user.last_name %> <%= user.first_name %></th>
    </tr>

  <tr>
    <th>自己紹介文</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<div class='row'>

  <% if current_user != user %>
    <td><%= render "relationships/btn", user: user %></td>
  <% else %>
  <%= link_to edit_public_user_path(user.id), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  <% end %>

  <!--ゲストログイン-->
  <% if user.last_name != "guestuser" %>
    <div class='row'>
    </div>
  <% end %>
</div>