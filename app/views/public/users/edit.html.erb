<div class = "container">

      <h2>ユーザー情報編集画面</h2>

        <%= form_with model: @user, url: public_user_path, method: :PATCH do |f| %>

         <div class="field">
          <label class="col-lg-3">プロフィール画像</label>


        　<div class="field">
          <label class="col-lg-3">名前</label>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
         </div>


         <div class="field">
          <label class="col-lg-3">フリガナ</label>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
         </div>

         <div class="field">
            <label class="col-lg-3">メールアドレス</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
         </div>

         <div class="field">
            <label class="col-lg-3">自己紹介文</label>
            <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
         </div>


         <br>
         <%= f.submit "保存する", class: "btn btn-success"%>
         <% end %>
         <%= link_to "退会する", public_unsubscride_path, class: "btn btn-danger withdraw_page_btn"%>
     </div>
  </div>
</div>