<%= form_with model: [:public, @item],local:true do |f| %>

  <div class="form-group">
    <%= f.label :清掃箇所 %>
    <%= f.select :genre_id, Genre.all.collect{ |g| [g.name, g.id] }, {include_blank: '選択してください'}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :投稿タイトル %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :オススメ商品名 %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :実際使ってみた感想 %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <!--下記を星評価に修正する-->
  <%= f.hidden_field :star, value: 1 %>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>