      <% if current_user.present? %>
      <h2>ユーザー情報</h2>
      <%= render 'public/users/info', user: current_user %>
      <% end %>

      <% if current_user.present? %>
      <h2 class="mt-3">新規投稿</h2>
      <%= render 'form', item: @item %>
      <% end %>

    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>★オススメ商品一覧★</h2>
      <%= render 'index', items: @items%>

    </div>
  </div>
</div>