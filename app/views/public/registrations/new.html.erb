<!--新規会員登録画面-->

<div class="container">
<h2>新規会員登録</h2>

<%#= form_for(resource, as: resource_name, url: user_session_path(resource_name)) do |f| %>
<%= form_with model: @user, url: user_registration_path do |f| %>
  <%#= render "public/shared/error_messages", resource: resource %>

      <div class="row">
        <label class="col-lg-3">名前</label>
        <div class="col-lg-3">
          <%= f.text_field :last_name,autoforcus: true, autocomplete: "last_name",  placeholder: "(姓)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name,autoforcus: true, autocomplete: "first_name",  placeholder: "(名)" %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">フリガナ</label>
        <div class="col-lg-3">
          <%= f.text_field :last_name_kana,autoforcus: true, autocomplete: "last_name_kana",  placeholder: "(セイ)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name_kana,autoforcus: true, autocomplete: "first_name_kana",  placeholder: "(メイ)" %>
        </div>
      </div><br>


      <div class="row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
      </div><br>

     <div class="row">
        <label class="col-lg-3">パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %></label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "encrypted_password" %>
        </div>
      </div><br>


      <div class="row">
        <label class="col-lg-3">パスワード（確認用）</label>
        <div class="col-lg-3">
          <%= f.password_field :password_confirmation, autocomplete: "encrypted_password" %>
        </div>
      </div><br>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>

      <br>
      <h3>既に登録済みの方</h3>
      <div class="col-sm-3">
      <%= if controller_name != 'sessions' %>
        <%= link_to "こちら", new_user_session_path %>
      <% end %>
        からログインしてください
    </div>

<% end %>
</div>
