<!--投稿詳細画面-->
<div class="container">
  <div class="col-xs-12">
    <h3 class="headline">投稿詳細画面</h3>

      <table class="table table-bordered table-condensed">

        <tr>
          <div class="col-xs-2">
            <td><div>名前：<%= @item.user.last_name %><%= @item.user.first_name %></div></td>
          </div>
        </tr>

        <tr>
          <div class="col-xs-2">
            <td><div>投稿タイトル：<%= @item.title %></div></td>
          </div>
        </tr>

        <tr>
          <div class="col-xs-2">
            <td><div>オススメ商品名：<%= @item.name %></div></td>
          </div>
        </tr>

        <tr>
          <div class="col-xs-2">
            <td><div>実際使ってみた感想：<%= @item.body %></div></td>
          </div>
        </tr>

        <tr>
          <%= link_to "投稿を削除する", admin_item_path, method: :delete, class: "btn btn-danger", data: { confirm: "【確認】投稿を削除してよろしいですか？" } %></td>
        </tr>

      </table>

  </div>
</div>